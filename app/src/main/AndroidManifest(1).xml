<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cho.marketdb" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DBInsertActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DBUpdateActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".DBDeleteActivity"
            android:label="@string/app_name" />
        <provider
            android:authorities="com.example.cho.marketdb"
            android:name=".DBContentProvider"></provider>
    </application>

</manifest>
